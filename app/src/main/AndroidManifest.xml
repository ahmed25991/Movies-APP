<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="com.etisalattask.movies.MoviesApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_movies_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movies_launcher"
        android:supportsRtl="false"
        android:theme="@style/Theme.MoviesTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.etisalattask.movies.MainActivity"
            android:exported="true"
            android:theme="@style/MoviesSplashTheme"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>